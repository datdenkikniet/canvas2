{
  "manifest_version": 2,

  "name": "Dark Mode for Canvas",

  "version": "2.0.0",

  "version_name":"v2.0.0",

  "description": "Extension that brings theme options to Canvas Instructure. Customize your learning experience.",

  "icons":
  {
    "48": "res/icon48.png",
    "128": "res/icon128.png"
  },

  "browser_action" :
  {
    "default_title" : "Dark Mode for Canvas",
    "default_popup" : "popup.html"
  },


  "content_scripts":
  [
    {
      "css": ["css/canvas.css"],
      "matches": ["https://*.instructure.com/*"]
    }
  ]

}
