{
  "manifest_version": 2,

  "name": "Dark Mode for Canvas",

  "version": "2.0.0",

  "version_name":"v2.0.0",

  "description": "Extension that brings theme options to Canvas Instructure. Customize your learning experience.",

  "icons":
  {
    "48": "res/icon48.png",
    "128": "res/icon128.png"
  },

  "background":
  {
    "scripts":
    ["js/background.js"]
  },

  "permissions": [
    "tabs",
    "*://*.instructure.com/*",
    "activeTab",
    "webNavigation"
  ],

  "content_scripts":
  [
    {
      "css" : ["css/canvas.css"],
      "js" : ["js/canvas.js"],
      "run-at" : "document_start",
      "matches": ["https://*.instructure.com/*"]
    }
  ]

}
